{
    "manifest_version": 3,
    "name": "Udemy Speedrun",
    "author": "NightStranger",
    "description": "⚡️ Autoskip videos at Udemy ⚡️",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://udemy.com/course/**/learn/*",
                "https://*.udemy.com/course/**/learn/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "icons/logo.png"
    },
    "action": {
        "default_icon": "icons/logo.png",
        "default_popup": "popup.html"
    }
}